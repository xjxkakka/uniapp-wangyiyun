.list-head {
  display: flex;
  margin: 30rpx;
}
.list-head .list-head-img {
  width: 265rpx;
  height: 265rpx;
  border-radius: 15rpx;
  margin-right: 40rpx;
  overflow: hidden;
  position: relative;
}
.list-head .list-head-img image {
  width: 100%;
  height: 100%;
}
.list-head .list-head-img text {
  position: absolute;
  font-size: 26rpx;
  color: white;
  right: 8rpx;
  top: 8rpx;
}
.list-head .list-head-text {
  flex: 1;
  font-size: 24rpx;
  color: #c3d1e3;
}
.list-head .list-head-text image {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
}
.list-head .list-head-text view:nth-child(1) {
  font-size: 34rpx;
  color: #ffffff;
}
.list-head .list-head-text view:nth-child(2) {
  display: flex;
  align-items: center;
  margin: 30rpx 0;
}
.list-head .list-head-text view:nth-child(2) text {
  margin-left: 15rpx;
}
.list-head .list-head-text view:nth-child(3) {
  line-height: 38rpx;
}
.list-share {
  width: 330rpx;
  height: 72rpx;
  margin: 0 auto;
  background: rgba(0, 0, 0, 0.4);
  text-align: center;
  line-height: 72rpx;
  font-size: 26rpx;
  color: white;
  border-radius: 36rpx;
}
.list-share text {
  margin-right: 15rpx;
}
.list-music {
  background: white;
  border-radius: 50rpx;
  overflow: hidden;
  margin-top: 45rpx;
}
.list-music .list-music-title {
  height: 58rpx;
  line-height: 58rpx;
  margin: 30rpx 30rpx 70rpx 30rpx;
}
.list-music .list-music-title text:nth-child(1) {
  font-size: 58rpx;
}
.list-music .list-music-title text:nth-child(2) {
  font-size: 34rpx;
  margin: 0 10rpx 0 25rpx;
}
.list-music .list-music-title text:nth-child(3) {
  font-size: 28rpx;
  color: #b2b2b2;
}
.list-music .list-music-item {
  display: flex;
  margin: 0 30rpx 70rpx 44rpx;
  align-items: center;
}
.list-music .list-music-item .list-music-top {
  width: 56rpx;
  font-size: 28rpx;
  color: #979797;
}
.list-music .list-music-item .list-music-song {
  flex: 1;
  line-height: 40rpx;
}
.list-music .list-music-item .list-music-song .v1 {
  font-size: 30rpx;
  width: 70vw;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list-music .list-music-item .list-music-song .v2 {
  font-size: 22rpx;
  color: #a2a2a2;
  width: 70vw;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list-music .list-music-item .list-music-song .v2 text {
  font-size: 22rpx;
}
.list-music .list-music-item .list-music-song image {
  width: 34rpx;
  height: 22rpx;
  margin-right: 10rpx;
}
.list-music .list-music-item text {
  font-size: 50rpx;
  color: #c8c8c8;
}

